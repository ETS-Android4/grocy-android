<resources xmlns:tools="http://schemas.android.com/tools">

  <style name="Theme.Grocy" parent="Theme.Material3.DayNight.NoActionBar">
    <item name="android:colorPrimaryDark">?android:attr/colorBackground</item>
    <item name="android:navigationBarColor">?android:attr/colorBackground</item>

    <item name="android:colorControlNormal">?attr/colorOnBackground</item>
    <item name="android:colorControlActivated">?attr/colorSecondary</item>
    <item name="android:colorEdgeEffect">?attr/colorSecondary</item>

    <item name="android:fontFamily">@font/jost_book</item>

    <!-- Widget styles -->
    <item name="snackbarTextViewStyle">@style/Widget.Grocy.Snackbar.TextView</item>
    <item name="snackbarButtonStyle">@style/Widget.Grocy.Button.TextButton.Snackbar</item>

    <!-- Popup Menu styles -->
    <item name="popupMenuBackground">@drawable/shape_popup_menu</item>
    <item name="actionOverflowButtonStyle">@style/ThemeOverlay.Grocy.OverFlow</item>

    <!-- Dialog themes -->
    <item name="bottomSheetDialogTheme">@style/Theme.Grocy.BottomSheetDialog</item>

    <!-- Splash screen -->
    <item name="android:windowSplashScreenBackground" tools:targetApi="s">?android:attr/colorBackground</item>
    <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@drawable/ic_round_grocy_anim</item>
    <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="s">2050</item>
  </style>

  <style name="Theme.Grocy.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
    <item name="enableEdgeToEdge">true</item>
    <item name="android:navigationBarColor">@color/transparent</item>
